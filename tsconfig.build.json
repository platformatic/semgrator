{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "incremental": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/test"]
}
